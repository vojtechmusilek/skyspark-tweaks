{
  "name": "SkySpark Tweaks",
  "description": "...",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/ui/*",
        "https://*/ui/*"
      ],
      "js": [
        "lib/jquery-3.6.0.js",
        "components/editor-func-colors.js",
        "components/editor-func-history.js",
        "components/button-side-switch.js",
        "content.js",
        "tools.js"
      ],
      "run_at": "document_end"
    }
  ]
}