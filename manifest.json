{
  "name": "SkySpark Tweaks",
  "description": "...",
  "version": "1.0",
  "manifest_version": 3,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "options.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/ui/*",
        "https://*/ui/*"
      ],
      "js": [
        "lib/jquery-3.6.0.js",
        "components/editor-func-colors.js",
        "components/editor-func-history.js",
        "components/button-side-switch.js",
        "content.js",
        "tools.js"
      ],
      "run_at": "document_end"
    }
  ]
}